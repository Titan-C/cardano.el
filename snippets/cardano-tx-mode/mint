# key: mint
# name: mint
# expand-env: ((yas-indent-line 'fixed))
# --
mint:
  ${1: Name your policy}:
    policy:
      type: all
      scripts:
        - type: sig
          keyHash: `(cardano-address-key-hash (read-file-name "Select verification key file: " cardano-address-keyring-dir
                              nil nil nil (lambda (n) (string-suffix-p ".vkey" n))))`
        - type: before
          slot: ${2:`(->> (cardano-cli "query" "tip") (json-parse-string) (gethash "slot") (+ 3600))`} # One hour from current slot
    assets:
      ${3:tokenname}: $0

witness:
  - ${4: Repeat the same key used in the minting policy}

